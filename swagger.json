{
  "swagger": "2.0",
  "info": {
    "title": "Contacts API",
    "description": "Contacts API",
    "version": "1.0.0"
  },
  "host": "cse341-project1-8sfe.onrender.com",
  "basePath": "/",
  "schemes": [
    "https"
  ],
  "paths": {
    "/": {
      "get": {
        "tags": [
          "Hello World"
        ],
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/contacts/": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "description": "Retrieve all contacts.",
        "responses": {
          "200": {
            "description": "Successfully retrieved contacts",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/Contact"
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Contacts"
        ],
        "description": "Create a new contact.",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "description": "Contact information",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "type": "string",
                  "example": "John"
                },
                "lastName": {
                  "type": "string",
                  "example": "Doe"
                },
                "email": {
                  "type": "string",
                  "example": "johndoe@example.org"
                },
                "favoriteColor": {
                  "type": "string",
                  "example": "Blue"
                },
                "birthday": {
                  "type": "string",
                  "example": "January 1"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Contact successfully created"
          },
          "500": {
            "description": "Server error while creating contact",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "An error occurred while creating the contact."
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/contacts/{id}": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "description": "Retrieve a specific contact by ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID of the contact",
            "example": "681a954e208706a4867f8ef9"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved contact",
            "schema": {
              "$ref": "#/components/schemas/Contact"
            }
          }
        }
      },
      "put": {
        "tags": [
          "Contacts"
        ],
        "description": "Endpoint to update an existing contact by ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID of the contact to update",
            "example": "681a954e208706a4867f8ef9"
          },
          {
            "name": "obj",
            "in": "body",
            "description": "Contact information",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "type": "string",
                  "example": "John"
                },
                "lastName": {
                  "type": "string",
                  "example": "Doe"
                },
                "email": {
                  "type": "string",
                  "example": "johndoe@example.org"
                },
                "favoriteColor": {
                  "type": "string",
                  "example": "Blue"
                },
                "birthday": {
                  "type": "string",
                  "example": "January 1"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Contact successfully updated"
          },
          "500": {
            "description": "Server error while updating contact",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "An error occurred while updating the contact."
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Contacts"
        ],
        "description": "Endpoint to delete a contact by ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID of the contact to delete",
            "example": "681a954e208706a4867f8ef9"
          }
        ],
        "responses": {
          "204": {
            "description": "Contact successfully deleted"
          },
          "500": {
            "description": "Server error while deleting contact",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "An error occurred while deleting the contact."
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Contact": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "681a954e208706a4867f8ef9"
          },
          "firstName": {
            "type": "string",
            "example": "John"
          },
          "lastName": {
            "type": "string",
            "example": "Doe"
          },
          "email": {
            "type": "string",
            "example": "johndoe@example.org"
          },
          "favoriteColor": {
            "type": "string",
            "example": "Blue"
          },
          "birthday": {
            "type": "string",
            "example": "January 1"
          }
        }
      }
    }
  }
}